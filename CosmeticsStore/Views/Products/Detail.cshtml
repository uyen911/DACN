        display: flex;
        justify-content: left;
        align-items: center;
        margin-top: 20px;
    }

        .pagination a {
            margin: 0 5px;
            padding: 5px 10px;
            text-decoration: none;
            color: #333;
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

            .pagination a.current {
                background-color: #FE4C50;
                color: #fff;
            }
</style>