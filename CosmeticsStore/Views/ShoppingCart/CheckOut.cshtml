@{
    ViewBag.Title = "Thanh toán";
}
<style>
    .error {
        color: red;
    }
</style>

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">

<section class="shopping-checkout-wrap section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col product_section clearfix">

                        <!-- Breadcrumbs -->

                        <div class="breadcrumbs d-flex flex-row align-items-center">
                            <ul>
                                <li><h5><a href="index.html">Home</a></h5></li>
                                <li class="active"><h5><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></h5></li>
                            </ul>
                        </div>

                        <!-- Sidebar -->
                        <!-- Main Content -->
                        <div class="row">

                            <div class="col-lg-12 text-center">
                                <h1 style="font-size:70px">Đặt Hàng</h1>
                                <p style="font-size:30px">Bạn hãy kiểm tra lại thông tin đơn hàng cho chính xác!</p>
                            </div>

                        </div>
                        <hr />
                        @if (ViewBag.CheckCart != null)
                        {
                            <div class="row">
                                <div id="show_success"></div>
                                <div class="col-lg-6">
                                    @Html.Action("Partial_CheckOut", "Shoppingcart")
                                </div>
                                <div class="col-lg-6">
                                    @Html.Action("Partial_Item_ThanhToan", "ShoppingCart")

                                </div>
                            </div>
                        }
                        else
                        {
                            <div>
                                Bạn chưa có sản phẩm nào. Vui long quay lại trang <a style="color: #fe4c50" href="/san-pham"><strong>sản phẩm</strong></a> để mua hàng.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script>
        function OnFailure(rs) {
            if (!rs.Success) {
                $('#show_success').html("Mua hàng thất bại! Xin vui lòng thử lại");
            }
        }
        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    'CustomerName': {
                        required: true
                    },
                    'Phone': {
                        required: true
                    },
                    'Address': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    'CustomerName': 'Bạn không được để trống',
                    'Phone': 'Bạn không được để trống',
                    'Address': 'Bạn không được để trống',
                    'Email': 'Email không hợp lệ'
                }
            });
        });
    </script>
}

