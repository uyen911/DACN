	<style>
		.pending {
			border-radius: 5px;
			background-color: yellow;
		}

		.cancel {
			color: white;
			border-radius: 5px;
			background-color: #de0b40;
		}

		.done {
			color: white;
			border-radius: 5px;
			background-color: #37d45e;
		}
	</style>

	<script>
    function cancelAppointment(code) {
        swal({
            title: 'Thông báo',
            text: 'Bạn có chắc muốn hủy đặt lịch này không?',
            icon: 'warning',
            buttons: true,
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("CancelAppointment", "Services")',
                    data: { code: code },
                    success: function (result) {
                        if (result.success) {
                            swal({
                                title: 'Thông báo',
                                text: result.message,
                                icon: 'success',
                                button: "Đóng",
                            }).then((value) => {
                                location.reload();
                            });
                        } else {
                            swal({
                                title: 'Thông báo',
                                text: result.message,
                                icon: 'warning',
                                button: 'Đóng'
                            });
                        }
                    },
                    error: function () {
                        swal({
                            title: 'Thông báo',
                            text: 'Có lỗi xảy ra khi hủy đặt lịch. Vui lòng thử lại sau.',
                            icon: 'error',
                            button: 'Đóng'
                        });
                    }
                });
            }
        })
    }
    $(function () {
        $('body').on('click', '.cancel-appointment', function () {
            var id = $(this).data('id');
            cancelAppointment(id);
        });
    });

    $(function () {
        $('body').on('click', '#btnCancel', function () {
            var id = $(this).closest('tr').find('.cancel-appointment').data('id');
            var code = $(this).data('id');
            cancelAppointment(code);
        });
    });

    function updateAppointmentStatus(id, status) {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("UpdateAppointmentStatus", "Services")',
            data: { id: id, status: status },
            success: function (result) {
            if (result.success) {
                alert(result.message);
                swal({
                    title: 'Thông báo',
                    text: result.message,
                    icon: 'success',
                    button: 'Đóng'
                });
            } else {
                swal({
                    title: 'Thông báo',
                    text: result.message,
                    icon: 'error',
                    button: 'Đóng'
                });
                }
            },
            error: function () {
                swal({
                    title: 'Thông báo',
                    text: 'Có lỗi xảy ra khi cập nhật trạng thái đặt lịch. Vui lòng thử lại sau.',
                    icon: 'error',
                    button: 'Đóng'
                });
            }
            });
            }
	</script>
