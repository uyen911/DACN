<script>
    function cancelforbtnAppointment(code) {
        swal({
            title: 'Thông báo',
            text: 'Bạn có chắc muốn hủy đặt lịch này không?',
            icon: 'warning',
            buttons: true,
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                type: 'POST',
                url: '@Url.Action("CancelAppointment", "Services")',
                data: { code: code },
                success: function (result) {
                    if (result.success) {
                        swal({
                            title: 'Thông báo',
                            text: result.message,
                            icon: 'success',
                            button: "Đóng",
                        }).then((value) => {
                            location.reload();
                        });
                    } else {
                        swal({
                            title: 'Thông báo',
                            text: result.message,
                            icon: 'error',
                            button: 'Đóng'
                        });
                    }
                },
                error: function () {
                    swal({
                        title: 'Thông báo',
                        text: 'Có lỗi xảy ra khi hủy đặt lịch. Vui lòng thử lại sau.',
                        icon: 'error',
                        button: 'Đóng'
                    });
                }
                });
            }
        })

    }

    function cancelAppointment(code) {
        swal({
            title: 'Thông báo',
            text: 'Xác nhận lịch đặt này?',
